// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./UniSport.db"
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  sports Sport[]
}

model Sport {
  id String @id @default(cuid())
  name String
  schedule String
  university University[] @relation(fields: [universityId], references: [id])
  universityId String
  participants User[]
}

model University {
  id String @id @default(cuid())
  name String
  sports Sport[]
}
